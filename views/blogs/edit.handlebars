{{> _navbar}}
<div class="container">
  {{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
  {{else}} {{/each}}
  <div class="card card-body">
    <h3>Edit Blog</h3>
    <form action="/blogs/{{blogs.id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" value="{{blogs.title}}" required>
      </div>
      <div class="form-group">
        <label for="details">Blog</label>
        <textarea name="details" id="summernote">{{blogs.details}}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Post!</button>
    </form>
  </div>
</div>